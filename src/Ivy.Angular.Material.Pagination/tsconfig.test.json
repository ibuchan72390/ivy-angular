{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
